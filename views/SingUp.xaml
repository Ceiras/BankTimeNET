<Page x:Class="BankTimeNET.Views.SingUp"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BankTimeNET.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SingUp - Bank Time .NET">

    <Grid Background="White">
        <Label x:Name="nameLabel" Content="Name" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,90,0,0" Width="120" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox x:Name="nameInput" HorizontalAlignment="Center" Margin="0,116,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>

        <Label x:Name="dniLabel" Content="DNI" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,134,0,0" Width="120" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox x:Name="dniInput" HorizontalAlignment="Center" Margin="0,160,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>

        <Label x:Name="passwordLabel" Content="Password" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,178,0,0" Width="120" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <PasswordBox x:Name="passwordInput" HorizontalAlignment="Center" VerticalAlignment="Top" Width="120" Margin="0,204,0,0" HorizontalContentAlignment="Center"/>

        <Button x:Name="singUpButton" Click="singUpButton_Click" Content="Register" HorizontalAlignment="Center" VerticalAlignment="Top" Width="120" Margin="0,243,0,0"/>
        <Button x:Name="backButton" Click="backButton_Click" Content="Back" HorizontalAlignment="Center" Margin="0,270,0,0" VerticalAlignment="Top" Width="120"/>

        <Frame x:Name="singupFrame" />
    </Grid>
</Page>
